<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
             https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

  <persistence-unit name="ticketing-pu" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

    <!-- Entity Classes -->
    <class>mg.itu.ticketingproject.entity.User</class>
    <class>mg.itu.ticketingproject.entity.Role</class>
    <class>mg.itu.ticketingproject.entity.City</class>
    <class>mg.itu.ticketingproject.entity.Model</class>
    <class>mg.itu.ticketingproject.entity.Plane</class>
    <class>mg.itu.ticketingproject.entity.SeatType</class>
    <class>mg.itu.ticketingproject.entity.PlaneSeat</class>
    <class>mg.itu.ticketingproject.entity.Flight</class>
    <class>mg.itu.ticketingproject.entity.SeatPrice</class>
    <class>mg.itu.ticketingproject.entity.Offer</class>
    <class>mg.itu.ticketingproject.entity.Reservation</class>
    <class>mg.itu.ticketingproject.entity.ReservationDetails</class>
    <class>mg.itu.ticketingproject.entity.AgeCategory</class>
    <class>mg.itu.ticketingproject.entity.AgeOffer</class>
    <class>mg.itu.ticketingproject.entity.ReservationParam</class>

    <exclude-unlisted-classes>true</exclude-unlisted-classes>

    <properties>
      <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
      <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/ticketing"/>
      <property name="jakarta.persistence.jdbc.user" value="postgres"/>
      <property name="jakarta.persistence.jdbc.password" value="postgres"/>

      <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
      <property name="hibernate.hbm2ddl.auto" value="update"/>
      <property name="hibernate.show_sql" value="true"/>
      <property name="hibernate.format_sql" value="true"/>
      <property name="hibernate.use_sql_comments" value="true"/>
    </properties>
  </persistence-unit>
</persistence>
